        p1 = new JPanel(new GridLayout(2,1));
        p2 = new JPanel();
        p3 = new JPanel(new GridLayout(2,1));
        p4 = new JPanel();//khởi tạo

        //p1.setLayout(new GridLayout(2,1));

        add(p1);
        add(p2);
        add(p3);
        add(p4);//thêm panel vùng chứa vào

        //panel 1
        p1.add(l1);

        r1= new JRadioButton("Bò");
        r2= new JRadioButton("Gà");
        r3= new JRadioButton("Cá");

        rbContain.add(r1);
        rbContain.add(r2);
        rbContain.add(r3);
        
        r2.setSelected(true);
        Group.add(r1);
        Group.add(r2);
        Group.add(r3);

        p1.add(rbContain);

        //panel 2
        p2.add(button);

        //panel 3
        p3.add(l2);

        c1= new JCheckBox("Nướng");
        c2= new JCheckBox("Luộc");
        c3= new JCheckBox("Chiên");

        cbContain.add(c1);
        cbContain.add(c2);
        cbContain.add(c3);

        p3.add(cbContain);

        //panel 4
        p4.add(l3);
        btndelete.setEnabled(false);
        btnAdd.setEnabled(false);
        btnContain.add(btnAdd);
        btnContain.add(btndelete);
        
   //     p4.add(btnContain);
    //    model.addElement("Huy ngu");
  //      p4.add(list);
        list.setBorder(blackline);
        Containp4.add(btnContain);
        Containp4.add(list);
        p4.add(Containp4);
        
        
       
//        r1.addActionListener(new ActionListener() {
